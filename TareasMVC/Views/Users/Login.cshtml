@model TareasMVC.ViewModel.Login

@{
    ViewData["Title"] = "Login";
}

<h1>Ingresa</h1>

@if (ViewData.Keys.Contains("msj"))
{
    <p style="color:red">@ViewData["msj"]</p>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" autocomplete="off" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="RememberMe"/>
                <label class="form-check-label" asp-for="RememberMe"></label>
            </div>

            <button class="btn-primary btn">Ingresar</button>
            <a class="btn btn-success" asp-action="Register">Crea una nueva cuenta</a>

            <a class="btn btn-success" asp-action="ExternalLogin" asp-route-provider="Microsoft">
                Continuar con Microsoft
            </a>

        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}