@using Microsoft.AspNetCore.Localization;
@using Microsoft.AspNetCore.Mvc.Localization;
@using TareasMVC.Services;
@inject IViewLocalizer localizer

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}

<form asp-controller="Home" asp-action="ChangeLanguage" asp-route-returnUrl="@returnUrl" 
method="post" class="form-horizontal" role="form" style="display: inline">
    <label>@localizer["Idioma"]</label>
    <select name="culture" asp-for="@requestCulture.RequestCulture.UICulture.Name" id="culture" onchange="this.form.submit()" asp-items="Constants.UICultures"></select>
</form>