<label>
    <i class="bi bi-check-square"> Pasos de la tarea</i>
</label>
<button class="btn btn-secondary btn-sm" onclick="addStepHandle()">
    +
</button>

<div id="reorder-steps" data-bind="foreach: steps">
    <div class="mt2">
        <div class="row">
            <div class="col-1">
                <input type="checkbox" class="form-check-input" name="chbStep" data-bind="checked: complete, click: checkboxStepHandle, attr:{'data-id': id}" />
            </div>
            <div class="col-11">
                <span style="cursor: pointer" data-bind="text: description, hiden: editionMode,
                click: stepDescriptionClickHandle,
                css: {'text-decoration-line-through': complete}"></span>
                <textarea name="txtStepDescription" class="form-control" placeholder="Agregue una descripcion" data-bind="{value: description, visible: editionMode}"></textarea>
                <div class="mt-2" data-bind="{visible: editionMode}">
                    <button class="btn btn-primary" data-bind="{click: saveStepHandle}">Guardar</button>
                    <button class="btn btn-secondary" data-bind="{click: cancelStepHandle}">Cancelar</button>
                    <button class="btn btn-danger" data-bind="{hidden: isNew, click: deleteStepHandle}">Borrar</button>
                </div>
            </div>
        </div>    
    </div>
</div>